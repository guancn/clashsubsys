# 生产环境配置 - 与现有系统共存
# 选择不与现有系统冲突的端口

# 后端服务端口 (避开 25500)
BACKEND_PORT=8001

# 前端服务端口 (避开 8080) 
FRONTEND_PORT=3001

# Nginx 端口 (复用现有的 80/443)
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# 域名配置
DOMAIN=sub.guancn.me

# API 基础地址 (使用子路径)
API_BASE_URL=https://sub.guancn.me/clash/api

# 日志级别
LOG_LEVEL=INFO

# CORS 配置
CORS_ORIGINS=https://sub.guancn.me

# 应用前缀路径
APP_PREFIX=/clash
API_PREFIX=/clash/api